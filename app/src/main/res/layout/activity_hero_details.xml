<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="gr.gkortsaridis.superherosquadmaker.ui.hero.viewmodel.HeroDetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.hero.view.HeroDetailsActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:id="@+id/hero_image"
            app:imageUrl="@{viewModel.hero.thumbnail}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hero_name"
            android:text="@{viewModel.hero.name}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hire to Squad"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hero_details"
                android:text="@{viewModel.hero.description}"/>
        </ScrollView>

    </LinearLayout>
</layout>